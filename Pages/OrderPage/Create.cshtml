@page
@model SignalRAssignment.Pages.OrderPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Orders</h4>
<hr />
<div class="row"> 
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Orders.CustomerId" class="control-label"></label>
                @*<input asp-for="Orders.customerId" class="form-control" />*@
                <select asp-for="Orders.CustomerId" class="form-control">
                    @foreach (var item in Model.listCus)
                    {
                        <option value="@item.CustomerId">@item.ContactName</option>
                    }
                </select>
                <span asp-validation-for="Orders.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.OrderDate" class="control-label"></label>
                <input asp-for="Orders.OrderDate" class="form-control" />
                <span asp-validation-for="Orders.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.RequiredDate" class="control-label"></label>
                <input asp-for="Orders.RequiredDate" class="form-control" />
                <span asp-validation-for="Orders.RequiredDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.ShippedDate" class="control-label"></label>
                <input asp-for="Orders.ShippedDate" class="form-control" />
                <span asp-validation-for="Orders.ShippedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.Freight" class="control-label"></label>
                <input asp-for="Orders.Freight" class="form-control" />
                <span asp-validation-for="Orders.Freight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.ShipAddress" class="control-label"></label>
                <input asp-for="Orders.ShipAddress" class="form-control" />
                <span asp-validation-for="Orders.ShipAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
